{
  "private": true,
  "author": "wjc",
  "name": "my-template-umi",
  "main": "./electron/main.js",
  "version": "3.0.0",
  "description": "一个关于umi4的模板项目",
  "scripts": {
    "openapi": "node scripts/generate-api.js",
    "start": "pnpm dev",
    "dev": "cross-env UMI_ENV=dev REACT_DEV_INSPECTOR_EDITOR=vscode umi dev",
    "uat": "cross-env UMI_ENV=uat umi build",
    "sit": "cross-env UMI_ENV=sit umi build",
    "build": "cross-env UMI_ENV=prod umi build",
    "build:win": "pnpm build && electron-builder --win --x64",
    "build:linux": "npm run build && electron-builder --linux --config --publish never",
    "build:mac": "npm run build && electron-builder --mac --config --publish never",
    "build:mac-arm": "npm run build && electron-builder --arm64 --config --publish never",
    "build:mac-mas": "npm run build && electron-builder --mac --config electron-builder-mas.yml --publish never",
    "postinstall": "umi setup",
    "setup": "umi setup",
    "start:lint": "pnpm lint && pnpm dev",
    "analyze": "cross-env ANALYZE=1 umi build",
    "electron": "cross-env NODE_ENV=development electron .",
    "build-electron-win64": "electron-builder -w --x64",
    "yyds": "npx electron-packager . electron-quick-start --win --out ../electron-quick-start --arch=x64 --app-version=1.0.0 --electron-version=29.4.6 --overwrite --ignore=node_modules --asar=true"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "ahooks": "^3.9.5",
    "antd": "^5.27.1",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "babel-loader": "^10.0.0",
    "dayjs": "^1.11.18",
    "electron-store": "8.0.0",
    "electron-updater": "^6.6.2",
    "events": "^3.3.0",
    "lodash-es": "^4.17.21",
    "magical-antd-ui": "^1.0.0",
    "md5": "^2.3.0",
    "music-metadata": "^11.9.0",
    "node-notifier": "^10.0.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.6",
    "qs": "^6.14.0",
    "react-screenshots": "^0.5.22",
    "sass": "^1.91.0",
    "umi": "^4.4.12",
    "vstores": "^0.0.17"
  },
  "devDependencies": {
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@umijs/openapi": "^1.14.1",
    "@umijs/plugins": "^4.4.12",
    "cross-env": "^10.0.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "openapi-typescript-codegen": "^0.29.0",
    "react-dev-inspector": "^2.0.1",
    "swagger-typescript-api": "^13.2.15",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "build": {
    "publish": {
      "provider": "github",
      "owner": "wwLoveWj",
      "repo": "wjc-electron-umi4",
      "releaseType": "release"
    },
    "appId": "com.wjc.electron",
    "copyright": "Copyright © 2025 wjc",
    "productName": "wjcMusic",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "preload.js",
      "electron/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/electron-updater/**",
      "**/node_modules/node-schedule/**",
      "**/node_modules/node-notifier/**",
      "**/node_modules/nodemailer/**",
      "**/*.node"
    ],
    "generateUpdatesFilesForAllChannels": true,
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "win": {
      "icon": "./src/assets/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/assets/favicon.ico",
      "uninstallerIcon": "./src/assets/favicon.ico",
      "installerHeaderIcon": "./src/assets/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false,
      "warningsAsErrors": false
    }
  }
}
